<div class="row">
    {{#each notes}}
    <div class="col-md-3 mt-4">
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"> <i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block btn-sm" type="submit">
                    Borrar
                </button>
                
                </form>
                 </div>
        </div>
    </div>
    {{else}}
    <div class="col-md-3 mx-auto">
        <div class="card mt-4">
            
        <div class="card-body">
            <h3>Hola, {{user.name}}</h3>
            <p class="lead"> No hay notas</p>
            <a href="/notes/add" class="btn btn-success btn-block">Crear</a>
        </div>
        </div>
    </div>
    {{/each}}
</div>