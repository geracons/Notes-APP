<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4">
            <div class="card-header">
                Registro
            </div>
            <div class="card-body">
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control mt-2" name="name" placeholder="nombre" value={{name}}>
                    </div>
                     <div class="form-group">
                        <input type="email" class="form-control mt-2" name="email" placeholder="Email" value={{email}}>
                    </div>
                     <div class="form-group">
                        <input type="password" class="form-control mt-2" name="password" placeholder="password" value={{password}}>
                    </div>
                     <div class="form-group">
                        <input type="password" class="form-control mt-2" name="repassword" placeholder="Confirmar password" value={{repassword}}>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block mt-2" type="submit">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>